@{
    ViewBag.Title = "validation";
}

<div ng-app="mainApp">

    <h1>validation</h1>
    <div>
        <div class="panel panel-info">
            <div class="panel-body" ng-controller="mainController">
                <div>
                    <form name="mainForm" class="form-inline" ng-submit="onsubmit()" novalidate="novalidate">
                        <div>
                            <input type="text" class="form-control" ng-model="username" placeholder="name" required />
                        </div>
                        <br/>
                        <div>
                            <input type="password" class="form-control" ng-model="password" placeholder="password" required ng-minlength="6" />
                        </div>
                        <br />
                        <div>
                            <button type="submit" class="btn btn-primary" ng-disabled="mainForm.$invalid">Submit</button>
                        </div>
                    </form>
                </div>
                <br />
                <pre> {{mainForm | json}} </pre>
            </div>
        </div>
    </div>

</div>

<script type="text/javascript">
    var app = angular.module("mainApp", ["ngMessages"]);

    app.controller("mainController", function ($scope) {
        $scope.onsubmit = function () {
            console.log("Submitted")
        }
    });
</script>

@section scripts{
    <script src="~/Scripts/angular-messages.min.js"></script>
}

@section styles{
    <style type="text/css">
        input[type='text'], input[type='password'] {
            
        }

            input[type='text'].ng-invalid, input[type='password'].ng-invalid {
                border: #f00 solid 1px;
                border-width: 1px 1px 1px 8px;
            }

            input[type='text'].ng-valid, input[type='password'].ng-valid {
                border: #3276b1 solid 1px;
                border-width: 1px 1px 1px 8px;
            }
    </style>
}
