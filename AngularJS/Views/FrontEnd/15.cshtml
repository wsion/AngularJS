@{
    ViewBag.Title = "Animate";
}

<div ng-app="mainApp">

    <h1>Animate</h1>
    <div>
        <div class="panel panel-info">
            <div class="panel-body" ng-controller="mainController">
                <div class="form-inline">
                    <input type="text" class="form-control" ng-model="search" placeholder="search" />
                </div>
                <div>
                    <ul>
                        <li class="animate" ng-repeat="item in fruits | filter : search">{{item}}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>

<script type="text/javascript">
    var app = angular.module("mainApp", ["ngAnimate"]);

    app.controller("mainController", function ($scope) {
        $scope.fruits = ["Dragon Fruit", "Orange", "Plum", "Watermelon", "Apricot", "Grape", "Strawberry"];
    });
</script>

@section scripts{
    <script src="~/Scripts/angular-animate.min.js"></script>
}

@section styles{
    <style type="text/css">
        .animate.ng-enter, .animate.ng-leave {
            transition: 500ms linear all;
        }

            .animate.ng-leave.ng-leave-active {
                opacity: 0;
            }

            .animate.ng-enter.ng-enter-active {
                opacity: 10;
            }
    </style>
}


